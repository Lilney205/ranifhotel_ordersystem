<div class="swipe-hint">Swipe left or right to navigate through the menu</div>

<script>
    const container = document.querySelector('.container');
    let currentIndex = 0;

    function showPage(index) {
        container.style.transform = `translateX(-${index * 100}vw)`;
    }

    // Swipe gesture handling
    let startX = 0;
    container.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
    });

    container.addEventListener('touchend', (e) => {
        const endX = e.changedTouches[0].clientX;
        if (startX > endX + 50 && currentIndex < container.children.length - 1) {
            currentIndex++;
        } else if (startX < endX - 50 && currentIndex > 0) {
            currentIndex--;
        }
        showPage(currentIndex);
    });

    // Order button functionality
    function orderFood(food) {
        const phoneNumber = "0719760391"; // Updated phone number
        const message = `Hello, I would like to order ${food} from RANIF HOTEL.`;
        const url = `https://wa.me/254${phoneNumber.slice(1)}?text=${encodeURIComponent(message)}`;
        window.open(url, '_blank');
    }
</script>

